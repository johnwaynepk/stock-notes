// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String      @id @default(cuid())
  email        String      @unique
  name         String?
  passwordHash String      @map("password_hash")
  createdAt    DateTime    @default(now()) @map("created_at")
  updatedAt    DateTime    @updatedAt @map("updated_at")

  userStocks          UserStock[]
  tags                Tag[]
  accounts            Account[]
  sessions            Session[]
  passwordResetTokens PasswordResetToken[]

  @@map("users")
}

model PasswordResetToken {
  id        String    @id @default(cuid())
  userId    String    @map("user_id")
  token     String    @unique
  expiresAt DateTime  @map("expires_at")
  usedAt    DateTime? @map("used_at")
  createdAt DateTime  @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("password_reset_tokens")
}

// NextAuth tables
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Core Stock Data
model Stock {
  id         String      @id @default(cuid())
  symbol     String      // e.g., "AAPL"
  exchange   String      // e.g., "NASDAQ"
  name       String      // e.g., "Apple Inc."
  currency   String      // e.g., "USD"
  country    String      // e.g., "US"
  type       String?     // "stock" | "etf" | "index"
  createdAt  DateTime    @default(now()) @map("created_at")
  updatedAt  DateTime    @updatedAt @map("updated_at")

  userStocks UserStock[]

  @@unique([symbol, exchange])
  @@index([symbol])
  @@map("stocks")
}

model UserStock {
  id         String    @id @default(cuid())
  userId     String    @map("user_id")
  stockId    String    @map("stock_id")
  addedAt    DateTime  @default(now()) @map("added_at")
  archivedAt DateTime? @map("archived_at") // null = active, date = archived
  deletedAt  DateTime? @map("deleted_at")  // soft delete; hard-deleted after 90 days
  order      Int       @default(0) // for drag-to-reorder

  user       User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  stock      Stock            @relation(fields: [stockId], references: [id], onDelete: Cascade)
  tags       UserStockTag[]
  notes      Note[]

  @@unique([userId, stockId])
  @@index([userId, archivedAt])
  @@index([userId, deletedAt])
  @@map("user_stocks")
}

model Tag {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  name      String
  color     String   // hex color for UI
  createdAt DateTime @default(now()) @map("created_at")

  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  userStockTags UserStockTag[]

  @@unique([userId, name])
  @@index([userId])
  @@map("tags")
}

model UserStockTag {
  id          String @id @default(cuid())
  userStockId String @map("user_stock_id")
  tagId       String @map("tag_id")

  userStock UserStock @relation(fields: [userStockId], references: [id], onDelete: Cascade)
  tag       Tag       @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([userStockId, tagId])
  @@map("user_stock_tags")
}

model Note {
  id          String    @id @default(cuid())
  userStockId String    @map("user_stock_id")
  content     String    @db.Text
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  deletedAt   DateTime? @map("deleted_at") // soft delete; hard-deleted after 90 days

  userStock UserStock @relation(fields: [userStockId], references: [id], onDelete: Cascade)

  @@index([userStockId, createdAt])
  @@index([userStockId, deletedAt])
  @@map("notes")
}
